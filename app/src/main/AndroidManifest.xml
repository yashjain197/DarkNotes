<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dark.notes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/notes_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/notes_background_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name="com.dark.notes.splash_screen"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.dark.notes.WriteEditNotes"
            android:parentActivityName="com.dark.notes.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.dark.notes.MainActivity"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop"
            >
        </activity>
    </application>

</manifest>